<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6 col-sm-offset-2">
      <div class="form-meeting">
        <h2> Meeting Info </h2>
          <%= simple_form_for(@meeting) do |f| %>
            <div class="form-inputs">
              <%= f.input :title, required: true, autofocus: true, placeholder: "Meeting Title" %>
              <%= f.input :expected_start_date, required: true, as: :datetime, html5: true %>
              <%= f.input :expected_end_date, required: true, as: :datetime, html5: true %>
              <%= f.input :participants_number, required: true, :collection => 2..60  %>
              <%= f.input :place, placeholder: "Room ***", collection: @places %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Schedule Meeting", class: "btn btn-primary" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
