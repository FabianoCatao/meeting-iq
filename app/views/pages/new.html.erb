<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8">
      <div class="form-meeting">
        <h2> Meeting Info </h2>
          <% simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
            <%= f.input :title, required: true, autofocus: true, placeholder: "email@mail.com" %>
            <%= f.input :goal, required: true,  placeholder: "meeting type" %>
            <%= f.input :start_date, required: true, as: :datetime, html5: true %>
            <%= f.input :location, required: true, placeholder: "7th floor room 407" %>
            <%= f.input :description, :as => :text, required: true, placeholder: "what are the topics at hand?" %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Schedule Meeting", class: "btn btn-primary" %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
